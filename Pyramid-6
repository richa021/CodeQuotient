#include<iostream>
#include<cstdio>
#include<cmath>
using namespace std;
int main()
{
  int n,j;
  cin>>n;
  for(int i=1;i<=n;i++){
    for(j=i;j>=1;j--)
    {
      cout<<j;
    }
    //After execution of above for loop  j became 0
    while(j+2<=i){
      cout<<j+2;
      j++;
    }
    cout<<"\n";
  }
   return 0;
}
